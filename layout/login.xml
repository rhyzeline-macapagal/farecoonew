<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgone">

    <TextView
        android:id="@+id/farecoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/crimsonbold"
        android:text="F A R E C O"
        android:textColor="#73331A"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/farecoDetails"
        app:layout_constraintStart_toStartOf="@+id/farecoDetails"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/farecoDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/crimsontext"
        android:text="FARECO (FAshion RECOmmendation) website and mobile app revolutionizes
wardrobe coordination with its cutting-edge mobile application. The app empowers
users to rate, share, and curate favorite outfits, fostering a personalized fashion
experience."
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/farecoTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>